<%- include('partials/head') %>
<%- include('partials/navbar') %>

    <section class="relative py-12" x-data="playlistsPage()">
        <div class="absolute top-0 right-0 w-[400px] h-[400px] bg-emerald-500/5 rounded-full blur-[120px] pointer-events-none"></div>
        
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
            
            <!-- Header -->
            <div class="flex items-center justify-between mb-10">
                <div>
                    <h1 class="text-4xl font-bold mb-3">Your Playlists</h1>
                    <p class="text-gray-400">Manage your saved music collections</p>
                </div>
                <button @click="showCreate = true" 
                        class="flex items-center gap-2 px-5 py-2.5 bg-primary-500 hover:bg-primary-400 rounded-xl text-sm font-semibold transition-all shadow-lg shadow-primary-500/25 hover:scale-[1.02]">
                    <i class="fas fa-plus"></i>
                    <span class="hidden sm:inline">New Playlist</span>
                </button>
            </div>

            <!-- Playlist Grid -->
            <% if (typeof playlists !== 'undefined' && playlists.length > 0) { %>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                <% playlists.forEach(pl => { %>
                <div class="group glass rounded-2xl p-5 hover:bg-white/[0.06] hover:border-white/10 transition-all duration-300 hover-lift">
                    <div class="flex items-start justify-between mb-4">
                        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-primary-500/20 to-purple-500/20 flex items-center justify-center">
                            <i class="fas fa-list text-primary-400"></i>
                        </div>
                        <div class="flex gap-1">
                            <button onclick="viewPlaylist('<%= pl.name %>')" class="w-8 h-8 rounded-lg bg-white/5 hover:bg-white/10 flex items-center justify-center text-gray-400 hover:text-white transition-all">
                                <i class="fas fa-eye text-xs"></i>
                            </button>
                            <button onclick="deletePlaylist('<%= pl.name %>')" class="w-8 h-8 rounded-lg bg-white/5 hover:bg-red-500/10 flex items-center justify-center text-gray-400 hover:text-red-400 transition-all">
                                <i class="fas fa-trash text-xs"></i>
                            </button>
                        </div>
                    </div>
                    <h3 class="font-semibold truncate mb-1"><%= pl.name %></h3>
                    <div class="flex items-center gap-4 text-xs text-gray-500">
                        <span><i class="fas fa-music mr-1.5"></i><%= pl.song_count || 0 %> songs</span>
                        <span><i class="fas fa-play mr-1.5"></i><%= pl.plays || 0 %> plays</span>
                    </div>
                </div>
                <% }); %>
            </div>
            <% } else { %>
            <!-- Empty State -->
            <div class="text-center py-24">
                <div class="w-20 h-20 rounded-2xl bg-white/5 flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-list text-3xl text-gray-600"></i>
                </div>
                <h3 class="text-xl font-semibold mb-3">No playlists yet</h3>
                <p class="text-gray-400 text-sm mb-6 max-w-sm mx-auto">Create your first playlist to save your favorite tracks.</p>
                <button @click="showCreate = true" class="inline-flex items-center gap-2 px-6 py-3 bg-primary-500 hover:bg-primary-400 rounded-xl font-semibold transition-all shadow-lg shadow-primary-500/25">
                    <i class="fas fa-plus"></i>Create Playlist
                </button>
            </div>
            <% } %>
        </div>

        <!-- Create Playlist Modal -->
        <div x-show="showCreate" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
             x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"
             class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/60 backdrop-blur-sm" @click.self="showCreate = false">
            <div x-show="showCreate" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 scale-95" x-transition:enter-end="opacity-100 scale-100"
                 class="bg-surface-800 border border-white/10 rounded-2xl shadow-2xl w-full max-w-md p-6">
                <h3 class="text-lg font-semibold mb-4">Create New Playlist</h3>
                <input x-model="newName" type="text" placeholder="Playlist name..." 
                       class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-sm focus:outline-none focus:border-primary-500/50 transition-all mb-4"
                       @keydown.enter="createPlaylist()">
                <div class="flex justify-end gap-3">
                    <button @click="showCreate = false" class="px-4 py-2.5 bg-white/5 hover:bg-white/10 rounded-xl text-sm font-medium transition-all">Cancel</button>
                    <button @click="createPlaylist()" :disabled="!newName.trim()" 
                            class="px-4 py-2.5 bg-primary-500 hover:bg-primary-400 disabled:opacity-50 rounded-xl text-sm font-semibold transition-all">Create</button>
                </div>
            </div>
        </div>
    </section>

    <script>
        function playlistsPage() {
            return {
                showCreate: false,
                newName: '',
                async createPlaylist() {
                    if (!this.newName.trim()) return;
                    try {
                        const res = await fetch('/api/playlists', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ name: this.newName.trim() })
                        });
                        if (res.ok) location.reload();
                    } catch(e) { console.error(e); }
                }
            };
        }
        async function viewPlaylist(name) {
            try {
                const res = await fetch('/api/playlists/' + encodeURIComponent(name));
                if (res.ok) {
                    const data = await res.json();
                    alert('Playlist: ' + name + '\nSongs: ' + (data.songs?.length || 0));
                }
            } catch(e) {}
        }
        async function deletePlaylist(name) {
            if (!confirm('Delete playlist "' + name + '"?')) return;
            try {
                const res = await fetch('/api/playlists/' + encodeURIComponent(name), { method: 'DELETE' });
                if (res.ok) location.reload();
            } catch(e) {}
        }
    </script>

<%- include('partials/footer') %>
