<%- include('partials/head') %>
<%- include('partials/navbar') %>

    <!-- Dashboard - Server Selection -->
    <section class="relative py-12">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-primary-500/5 rounded-full blur-[120px] pointer-events-none"></div>
        
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            
            <!-- Header -->
            <div class="mb-10">
                <h1 class="text-4xl font-bold mb-3">Your Servers</h1>
                <p class="text-gray-400">Select a server to manage its settings and player</p>
            </div>

            <% if (typeof guilds !== 'undefined' && guilds.length > 0) { %>
            
            <!-- Managed Servers -->
            <% const managedGuilds = guilds.filter(g => g.botPresent); %>
            <% const invitableGuilds = guilds.filter(g => !g.botPresent); %>
            
            <% if (managedGuilds.length > 0) { %>
            <div class="mb-10">
                <div class="flex items-center gap-2 mb-5">
                    <span class="text-xs font-semibold uppercase tracking-widest text-gray-500">Managed Servers</span>
                    <span class="px-2 py-0.5 rounded-md bg-primary-500/10 text-primary-400 text-xs font-medium"><%= managedGuilds.length %></span>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    <% managedGuilds.forEach(guild => { %>
                    <a href="/server/<%= guild.id %>" 
                       class="group glass rounded-2xl p-5 hover:bg-white/[0.06] hover:border-primary-500/20 transition-all duration-300 hover-lift flex items-center gap-4">
                        <% if (guild.icon) { %>
                            <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=96" 
                                 alt="" class="w-12 h-12 rounded-xl object-cover ring-2 ring-white/5 group-hover:ring-primary-500/30 transition-all">
                        <% } else { %>
                            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary-500/20 to-purple-500/20 flex items-center justify-center text-lg font-bold text-primary-400 ring-2 ring-white/5">
                                <%= guild.name.charAt(0) %>
                            </div>
                        <% } %>
                        <div class="flex-1 min-w-0">
                            <div class="font-semibold truncate group-hover:text-white transition-colors"><%= guild.name %></div>
                            <div class="text-xs text-gray-500 mt-0.5"><%= guild.memberCount?.toLocaleString() || '—' %> members</div>
                        </div>
                        <i class="fas fa-arrow-right text-gray-600 group-hover:text-primary-400 group-hover:translate-x-1 transition-all"></i>
                    </a>
                    <% }); %>
                </div>
            </div>
            <% } %>

            <% if (invitableGuilds.length > 0) { %>
            <div>
                <div class="flex items-center gap-2 mb-5">
                    <span class="text-xs font-semibold uppercase tracking-widest text-gray-500">Add Bot To</span>
                    <span class="px-2 py-0.5 rounded-md bg-white/5 text-gray-400 text-xs font-medium"><%= invitableGuilds.length %></span>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    <% invitableGuilds.forEach(guild => { %>
                    <a href="https://discord.com/oauth2/authorize?client_id=<%= typeof clientId !== 'undefined' ? clientId : '' %>&permissions=8&scope=bot%20applications.commands&guild_id=<%= guild.id %>" 
                       target="_blank"
                       class="group glass rounded-2xl p-5 hover:bg-white/[0.06] hover:border-emerald-500/20 transition-all duration-300 flex items-center gap-4 opacity-60 hover:opacity-100">
                        <% if (guild.icon) { %>
                            <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=96" 
                                 alt="" class="w-12 h-12 rounded-xl object-cover grayscale group-hover:grayscale-0 transition-all">
                        <% } else { %>
                            <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center text-lg font-bold text-gray-500">
                                <%= guild.name.charAt(0) %>
                            </div>
                        <% } %>
                        <div class="flex-1 min-w-0">
                            <div class="font-semibold truncate text-gray-300"><%= guild.name %></div>
                            <div class="text-xs text-gray-600 mt-0.5"><%= guild.memberCount?.toLocaleString() || '—' %> members</div>
                        </div>
                        <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-emerald-500/10 flex items-center justify-center text-emerald-400 group-hover:bg-emerald-500 group-hover:text-white transition-all">
                            <i class="fas fa-plus text-xs"></i>
                        </div>
                    </a>
                    <% }); %>
                </div>
            </div>
            <% } %>

            <% } else { %>
            <!-- Empty State -->
            <div class="text-center py-24">
                <div class="w-20 h-20 rounded-2xl bg-white/5 flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-server text-3xl text-gray-600"></i>
                </div>
                <h3 class="text-xl font-semibold mb-3">No servers found</h3>
                <p class="text-gray-400 text-sm mb-6 max-w-sm mx-auto">You need to be an administrator of a server with Rexom to manage it.</p>
                <a href="https://discord.com/oauth2/authorize?client_id=<%= typeof clientId !== 'undefined' ? clientId : '' %>&permissions=8&scope=bot%20applications.commands" 
                   class="inline-flex items-center gap-2 px-6 py-3 bg-primary-500 hover:bg-primary-400 rounded-xl font-semibold transition-all shadow-lg shadow-primary-500/25">
                    <i class="fab fa-discord"></i>Add Rexom to a Server
                </a>
            </div>
            <% } %>
        </div>
    </section>

<%- include('partials/footer') %>
